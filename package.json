{
  "name": "vite-shop",
  "version": "0.0.1",
  "scripts": {
    "dev": "esno ./build/script/preserve.ts && cross-env NODE_ENV=development vite",
    "cz": "git-cz",
    "build": "vite build",
    "log": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "clean:lib": "npx rimraf node_modules",
    "ls-lint": "npx ls-lint",
    "lint": "eslint --fix --ext \"src/**/*.{vue,css,scss,ts}\"",
    "lint:fix": "eslint --fix --ext \"src/**/*.{vue,css,scss,ts}\"",
    "lint:prettier": "prettier --write --loglevel warn \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --fix \"**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "reinstall": "rimraf yarn.lock && rimraf package.lock.json && rimraf node_modules && yarn"
  },
  "dependencies": {
    "emoji-regex": "^9.2.0",
    "lodash": "^4.17.20",
    "vant": "^3.0.0-beta.7",
    "vue": "^3.0.2",
    "vue-router": "^4.0.0-rc.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@ls-lint/ls-lint": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "@vue/compiler-sfc": "^3.0.2",
    "autoprefixer": "8",
    "babel-plugin-import": "^1.13.1",
    "commitizen": "^4.2.2",
    "commitlint-config-cz": "^0.13.2",
    "conventional-changelog-cli": "^2.1.1",
    "conventional-changelog-custom-config": "^0.3.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^7.1.0",
    "esno": "^0.2.4",
    "gitmoji-cli": "^3.2.12",
    "husky": "^4.3.0",
    "less": "^3.12.2",
    "lint-staged": "^10.5.1",
    "postcss-px-to-viewport": "^1.1.1",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "tasksfile": "^5.1.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "vite": "^1.0.0-rc.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "ls-lint && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
